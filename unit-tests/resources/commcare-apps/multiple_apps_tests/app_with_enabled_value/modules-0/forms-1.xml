<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:orx="http://openrosa.org/jr/xforms" xmlns="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:vellum="http://commcarehq.org/xforms/vellum">
	<h:head>
		<h:title>Supply Delivery</h:title>
		<model>
			<instance>
				<data xmlns:jrm="http://dev.commcarehq.org/jr/xforms" xmlns="http://openrosa.org/formdesigner/C268616F-9296-4224-A771-95372308B891" uiVersion="1" version="23" name="Supply Delivery">
					<item_type/>
					<quantity/>
					<post_stock_soil/>
					<post_stock_seed/>
					<post_stock_fertilizer/>
					<pre_stock_soil/>
					<pre_stock_seed/>
					<pre_stock_fertilizer/>
				<case xmlns="http://commcarehq.org/case/transaction/v2" case_id="" date_modified="" user_id=""><update><stock_of_fertilizer/><stock_of_seed/><stock_of_soil/></update></case><orx:meta xmlns:cc="http://commcarehq.org/xforms"><orx:deviceID/><orx:timeStart/><orx:timeEnd/><orx:username/><orx:userID/><orx:instanceID/><cc:appVersion/></orx:meta></data>
			</instance><instance id="commcaresession" src="jr://instance/session"/><instance id="casedb" src="jr://instance/casedb"/>
			<bind nodeset="/data/item_type" required="true()"/>
			<bind nodeset="/data/quantity" type="xsd:double" required="true()"/>
			<bind nodeset="/data/post_stock_soil" calculate="if(/data/item_type = 'soil', /data/pre_stock_soil + /data/quantity, /data/pre_stock_soil)"/>
			<bind nodeset="/data/post_stock_seed" calculate="if(/data/item_type = 'seed', /data/pre_stock_seed + /data/quantity, /data/pre_stock_seed)"/>
			<bind nodeset="/data/post_stock_fertilizer" calculate="if(/data/item_type = 'fertilizer', /data/pre_stock_fertilizer + /data/quantity, /data/pre_stock_fertilizer)"/>
			<bind nodeset="/data/pre_stock_soil"/>
			<bind nodeset="/data/pre_stock_seed"/>
			<bind nodeset="/data/pre_stock_fertilizer"/>
			<itext>
				<translation lang="en" default="">
					<text id="item_type-label">
						<value>Type of item delievered</value>
					</text>
					<text id="item_type-fertilizer-label">
						<value>fertilizer</value>
					</text>
					<text id="item_type-soil-label">
						<value>soil</value>
					</text>
					<text id="item_type-seed-label">
						<value>seed</value>
					</text>
					<text id="quantity-label">
						<value>Amount of item delivered (in kg)</value>
					</text>
				</translation>
			</itext>
		<bind calculate="/data/meta/timeEnd" nodeset="/data/case/@date_modified" type="xsd:dateTime"/><bind calculate="/data/meta/userID" nodeset="/data/case/@user_id"/><bind calculate="instance('commcaresession')/session/data/case_id" nodeset="/data/case/@case_id"/><bind calculate="/data/post_stock_fertilizer" nodeset="/data/case/update/stock_of_fertilizer" relevant="count(/data/post_stock_fertilizer) &gt; 0"/><bind calculate="/data/post_stock_seed" nodeset="/data/case/update/stock_of_seed" relevant="count(/data/post_stock_seed) &gt; 0"/><bind calculate="/data/post_stock_soil" nodeset="/data/case/update/stock_of_soil" relevant="count(/data/post_stock_soil) &gt; 0"/><setvalue event="xforms-ready" ref="/data/pre_stock_soil" value="instance('casedb')/casedb/case[@case_id=instance('commcaresession')/session/data/case_id]/stock_of_soil"/><setvalue event="xforms-ready" ref="/data/pre_stock_fertilizer" value="instance('casedb')/casedb/case[@case_id=instance('commcaresession')/session/data/case_id]/stock_of_fertilizer"/><setvalue event="xforms-ready" ref="/data/pre_stock_seed" value="instance('casedb')/casedb/case[@case_id=instance('commcaresession')/session/data/case_id]/stock_of_seed"/><setvalue event="xforms-ready" ref="/data/meta/deviceID" value="instance('commcaresession')/session/context/deviceid"/><setvalue event="xforms-ready" ref="/data/meta/timeStart" value="now()"/><bind nodeset="/data/meta/timeStart" type="xsd:dateTime"/><setvalue event="xforms-revalidate" ref="/data/meta/timeEnd" value="now()"/><bind nodeset="/data/meta/timeEnd" type="xsd:dateTime"/><setvalue event="xforms-ready" ref="/data/meta/username" value="instance('commcaresession')/session/context/username"/><setvalue event="xforms-ready" ref="/data/meta/userID" value="instance('commcaresession')/session/context/userid"/><setvalue event="xforms-ready" ref="/data/meta/instanceID" value="uuid()"/><setvalue event="xforms-ready" ref="/data/meta/appVersion" value="instance('commcaresession')/session/context/appversion"/></model>
	</h:head>
	<h:body>
		<select1 ref="/data/item_type">
			<label ref="jr:itext('item_type-label')"/>
			<item>
				<label ref="jr:itext('item_type-fertilizer-label')"/>
				<value>fertilizer</value>
			</item>
			<item>
				<label ref="jr:itext('item_type-soil-label')"/>
				<value>soil</value>
			</item>
			<item>
				<label ref="jr:itext('item_type-seed-label')"/>
				<value>seed</value>
			</item>
		</select1>
		<input ref="/data/quantity">
			<label ref="jr:itext('quantity-label')"/>
		</input>
	</h:body>
</h:html>